{
  "manifest_version": 2,

  "name": "Text 2 Speech",
  "description": "Speaks the selected text, using speech synthesis from chrome",
  "version": "0.1.0",

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },

  "options_page": "options.html",

  "content_security_policy": "script-src 'self' http://localhost:8765 'unsafe-eval'; object-src 'self'",
  "permissions": []
}
